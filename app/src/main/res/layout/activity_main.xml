<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nitt.bsafe.MainActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:text="Pick three contacts:"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/tvcontact1"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:clickable="true"
        android:drawableRight="@drawable/ic_person_add_black_24dp"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_border_textview"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="18dp"
        android:text="Add first contact" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvphone1"
        android:textSize="20sp"
        android:layout_below="@+id/tvcontact1"/>

    <TextView
        android:id="@+id/tvcontact2"
        android:drawableRight="@drawable/ic_person_add_black_24dp"
        android:textSize="20sp"
        android:clickable="true"
        android:textColor="#000000"
        android:background="@drawable/rounded_border_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvphone1"
        android:layout_marginTop="18dp"
        android:text="Add second contact" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvphone2"
        android:textSize="20sp"
        android:layout_below="@+id/tvcontact2"/>

    <TextView
        android:id="@+id/tvcontact3"
        android:drawableRight="@drawable/ic_person_add_black_24dp"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:clickable="true"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_border_textview"
        android:layout_below="@+id/tvphone2"
        android:layout_marginTop="18dp"
        android:text="Add third contact" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvphone3"
        android:textSize="20sp"
        android:layout_below="@+id/tvcontact3"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="118dp"
        android:layout_height="108dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:clickable="true"
        android:background="@drawable/img"
        android:onClick="getGPSLocation"
        app:srcCompat="@drawable/panic" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvphone3"
        android:layout_marginTop="15dp"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:text="Save Details" />


</RelativeLayout>
